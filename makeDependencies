MakeAll:
	# Sudo Usage Preparation
	sudo apt-get update
	sudo apt-get upgrade

	# FLTK Installation
	sudo apt-get install libfltk1.3-dev libx11-dev fltk1.3-dev libxinerama1 x11proto-xinerama-dev
	
	# OpenCV Installation
	sudo apt-get install build-essential cmake git libgtk2.0-dev pkg-config libavcodec-dev libavformat-dev libswscale-dev python3.5 python3-numpy libtbb2 libtbb-dev libjpeg-dev libpng-dev libtiff5-dev libdc1394-22-dev libeigen3-dev libtheora-dev libvorbis-dev libxvidcore-dev libx264-dev sphinx-common libtbb-dev yasm libfaac-dev libopencore-amrnb-dev libopencore-amrwb-dev libopenexr-dev libgstreamer-plugins-base1.0-dev libavutil-dev libavfilter-dev libavresample-dev
	cd /opt && sudo rm -f -r opencv opencv_contrib
	cd /opt && sudo git clone https://github.com/Itseez/opencv.git
	cd /opt && sudo git clone https://github.com/Itseez/opencv_contrib.git
	cd /opt/opencv && sudo mkdir release
	cd /opt/opencv/release && sudo cmake -D BUILD_TIFF=ON -D WITH_CUDA=OFF -D ENABLE_AVX=OFF -D WITH_OPENGL=OFF -D WITH_OPENCL=OFF -D WITH_IPP=OFF -D WITH_TBB=ON -D BUILD_TBB=ON -D WITH_EIGEN=OFF -D WITH_V4L=OFF -D WITH_VTK=OFF -D BUILD_TESTS=OFF -D BUILD_PERF_TESTS=OFF -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=/usr/local -D OPENCV_EXTRA_MODULES_PATH=/opt/opencv_contrib/modules /opt/opencv/
	cd /opt/opencv/release && sudo make -j$(threads)
	cd /opt/opencv/release && sudo make install
	cd /opt/opencv/release && ldconfig
	pkg-config --modversion opencv
	
	# wiringPi Installation
	sudo apt-get install git git-core
	git clone https://www.github.com/WiringPi/WiringPi
	cd WiringPi && ./build

